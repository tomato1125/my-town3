<div class='NewPostMessage'>
  <h2 class='NewPostMessage__heading'>
    新規投稿一覧
  </h2>
</div>
<% @posts.each do |post| %>
  <div class='NewPost'>
    <div class='UserInfomation'>
      <div class='UserInfomation__userImage'>
        img
      </div>
      <span class='UserInfomation__username'>
        <a href="/users/<%= post.user.id %>">
          <%= post.user.name %>
        </a>
      </span>
      <div class='UserInfomation__date'>
        20200624 00:00:00
      </div>
    </div>
    <div class='PostImage' style="background-image: url(<%= post.image %>);">
      <div class="more">
        <ul class="more_list">
          <li>
            <%= link_to '詳細', post_path(post.id), method: :get %>
          </li>
          <% if user_signed_in? && current_user.id == post.user_id %>
            <li>
              <%= link_to '編集', edit_post_path(post.id), method: :get %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
    <div class='PostDescription'>
      <%= post.content %>
    </div>
    <div class='ReviewBox'>
      <div class='likeIcon'>
        <i class="fas fa-thumbs-up"></i>
      </div>
      <div class='numberOfView'>
        <i class="fas fa-eye"></i>
      </div>
    </div>
  </div>
<% end %>