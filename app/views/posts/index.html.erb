<div class='MainSpace'>
</div>
<div class='SearchSection'>
  <div class='SearchBackgroundImage' style="background-image: url(<%= asset_path "mytownimage2.jpeg" %>);">
    <p class='ApplicationKeyword'>〜故郷の良さを再発見〜
    </p>
    <p class='ApplicationIntroduce'>ここは故郷・今住んでいる場所のお気に入りスポットなどを投稿して共有するためのサイトです
    </p>
    <p class='SearchHeading'>Keyword
    </p>
    <div class='SearchSpace'>
      <%= form_with(url: search_posts_path, local: true, method: :get, class: "SearchForm") do |form| %>
        <%= form.text_field :keyword, placeholder: "キーワード検索する", class: "SearchForm__content" %>
        <%= form.submit "検索", class: "SearchForm__bottum" %>
      <% end %>
    </div>
  </div>
</div>
<div class='CategorySection'>
  <p class='CategoryHeading'>Category
  </p>
</div>
<div class='CategorySearch'>
  <%= render partial: "Flexslider" %>
</div>
<div class='AreaSearch'>
  <p class='AreaSearch__Name'> Prefecture
  </p>
  <div class='AreaSearch__Bottum'>
    <%= link_to '検索', '#', method: :get %>
  </div>
</div>
<div class='PresentLocationSearch'>
  <div class='PresentLocationSearch__Bottum'>
  </div>
</div>
<div class='NewPostMessage'>
  <h2 class='NewPostMessage__heading'>
    New Posts
  </h2>
</div>
<div class="PostIndex">
  <% @posts.each do |post| %>
    <div class='NewPost'>
      <div class='UserInfomation'>
        <div class='UserInfomation__userImage'>
          <i class="fas fa-user-circle"></i>
        </div>
        <span class='UserInfomation__username'>
          <a href="/users/<%= post.user.id %>">
            <%= post.user.name %>
          </a>
        </span>
        <div class='UserInfomation__date'>
          <span><%= time_ago_in_words(post.created_at) %>前</span>
        </div>
      </div>
      <div class="PostTitle">
        <span>~ <%= post.title %> ~</span>
      </div>
      <div class='PostImage' style="background-image: url(<%= post.image %>);">
        <div class="AreaInfomation">
          <div class="UserIcon">
            <i class="fas fa-map-marker-alt"></i>
          </div>
          <div class="AreaName">
            <%= post.prefecture.name if post.prefecture_id? %>
          </div>
        </div>
        <div class="more">
          <ul class="more_list">
            <li>
              <%= link_to '詳細', post_path(post.id), method: :get %>
            </li>
            <% if user_signed_in? && current_user.id == post.user_id %>
              <li>
                <%= link_to '編集', edit_post_path(post.id), method: :get %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
      <%# <div class='PostDescription'>
        <%= post.content %>
      <%# </div> %>
      <div class='ReviewBox'>
        <div class='ReviewBox__LikeIcon'>
          <i class="fas fa-thumbs-up"></i>
        </div>
        <div class='ReviewBox__NumberOfView'>
          <i class="fas fa-eye"></i>
        </div>
      </div>
    </div>
  <% end %>
</div>