<div class='recruitments'>
  <h2 class='recruitments__heading'>
    New Job Offer
  </h2>
</div>
<div class="recruitmentIndex">
  <% @recruitments.each do |recruitment| %>
    <div class='newRecruitment'>
      <a href="/recruitments/<%= recruitment.id %>"></a>
      <ul class="newRecruitment--label">
        <li><%= recruitment.industry.name %></li>
        <li><%= recruitment.occupation.name %></li>
        <li><%= recruitment.position.name %></li>
      </ul>
      <div class='campany'>
        <span class='campany--name'>
          <%= recruitment.campany %>
        </span>
        <div class='campany__date'>
          <i class="far fa-clock"></i>
          <span><%= time_ago_in_words(recruitment.created_at) %>前</span>
        </div>
      </div>
      <div class='recruitmentImage' style="background-image: url(<%= recruitment.image %>);">
        <a href="/recruitments/<%= recruitment.id %>"></a>
        <div class="AreaInfomation">
          <div class="UserIcon">
            <i class="fas fa-map-marker-alt"></i>
          </div>
          <div class="iAreaName">
            <%= recruitment.prefecture.name if recruitment.prefecture_id? %>
          </div>
        </div>
      </div>
      <div class="recruitmentTitle">
        <span>~ <%= recruitment.title %> ~</span>
      </div>
      <div class="jobForm__button">
        <button tupe="button" class='jobForm__button--icon' value="お気に入りへ"></button>
      </div>
    </div>
  <% end %>
</div>