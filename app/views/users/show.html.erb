<div class="myPage", style="background-image: url(<%= asset_path "TopPageImage.jpg" %>);">
  <div class="myPageMain">
    <div class="myPageBox">
      <div class="myPageBoxForm">
        <div class='UserInfomation__userImage'>
          <i class="fas fa-user"></i>
        </div>
        <span class='UserInfomation__username'>
          <%= @name %> さんのマイページ
        </span>
      </div>
      <div class='followView'>
        <div class="followView__follow">○○フォロー
        </div>
        <div class="followView__follow">○○フォロワー
        </div>
      </div>
      <div class="postcount">
        投稿数 <%= @posts.length %>
      </div>
    </div>
    <div class="userPostIndex">
      <% @posts.first(5).each do |post| %>
        <div class='mypage-NewPost'>
          <div class='ReviewBox'>
            <div class='ReviewBox__LikeIcon'>
              <i class="far fa-bookmark"></i>
            </div>
          </div>
          <span><%= time_ago_in_words(post.created_at) %>前</span>
          <div class="PostTitle">
            <span>~ <%= post.title %> ~</span>
          </div>
          <div class='userPostImage' style="background-image: url(<%= post.image %>);">
            <div class="AreaInfomation">
              <div class="UserIcon">
                <i class="fas fa-map-marker-alt"></i>
              </div>
              <div class="AreaName">
                <%= post.prefecture.name if post.prefecture_id? %>
              </div>
            </div>
            <div class="more">
              <span><%= image_tag 'arrow_top.png' %></span>
              <ul class="more_list">
                <li>
                  <%= link_to '詳細', post_path(post.id), method: :get %>
                </li>
              </ul>
            </div>
          </div>
          <% if user_signed_in? && current_user.id == post.user_id %>
            <%= link_to '編集', edit_post_path(post.id), method: :get %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>